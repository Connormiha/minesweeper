$color = #babdb6
// @stylint off
$colors =   'blue',
            'green',
            'red',
            'red',
            'red',
            'red',
            'red',
            'red',
// @stylint on

.cell
    height: 30px
    width: 30px
    box-sizing: border-box
    display: inline-block
    overflow hidden
    position: relative

    text-align center
    font-size: 16px
    line-height: 28px
    border-radius: 4px
    margin: 2px 2px 0

    cursor: default

    &_open
        background: #dededc

    &_close
        background: $color
        transition: background 0.3s

        &:hover
            background: #d3d7cf

    &_bomb
    &_flag
    &_question
        &::before
            content: ''
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            background-repeat: no-repeat
            background-position: center
            background-size: 20px 20px

    &_dead
        background-color: red

    &_bomb
        &::before
            background-image: url(assets/images/bomb.svg)
    &_flag
        &::before
            background-image: url(assets/images/flag.svg)

    &_question
        &::before
            background-image: url(assets/images/question.svg)

    &_count
        for $i in 1..8
            &_{$i}
                color: $colors[$i - 1]
