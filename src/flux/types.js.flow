export type CellType = {|
    isOpened: boolean,
    isBomb: boolean,
    isDead: boolean,
    isFlag: boolean,
    isUnknown: boolean,
    aroundBombCount: number,
    id: number,
|};

export type FieldType = CellType[][];

export type FieldStoreType = {|
    field: FieldType,
    flagsCount: number,
    openedCount: number,
    showAllBombs: boolean,
    isGenerated: boolean,
|};

export type GameState = 'fail' | 'win' | 'in-progress' | 'not-started';

export type GameType = {|
    width: number,
    height: number,
    minesCount: number,
    state: GameState,
|};

export type FieldFillParams = {|
    width: number,
    height: number,
    minesCount: number,
|};
