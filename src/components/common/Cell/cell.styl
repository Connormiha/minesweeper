$color = #BDBDBD

$colors =   blue,
            green,
            red,
            red,
            red,
            red,
            red,
            red,

.cell
    height: 30px
    width: 30px
    box-sizing: border-box
    display: inline-block
    overflow hidden
    text-align center
    position: relative
    font-size: 16px
    line-height: 28px
    background: #c0c0c0
    cursor: default

    &_open
        box-shadow: none
        border: 1px solid #ccc

    &_close
        //background: $color
        box-shadow: inset 0 0 3px 2px rgba(0, 0, 0, 0.3)

    &_bomb
    &_flag
    &_question
        &::before
            content: ''
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            background-repeat: no-repeat
            background-position: center
            background-size: 20px 20px

    &_dead
        background-color: red

    &_bomb
        &::before
            background-image: url(assets/images/bomb.svg)
    &_flag
        &::before
            background-image: url(assets/images/flag.svg)

    &_question
        &::before
            background-image: url(assets/images/question.svg)

    &_count
        for $i in 1..8
            &_{$i}
                color: $colors[$i - 1]
