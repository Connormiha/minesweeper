$color = #ccc

.cell
    height: 20px
    width: 20px
    border: 1px solid #000
    display: inline-block
    overflow hidden
    text-align center

    &_open
        background: red

    &_close
        background: $color

    &_bomb
        &::before
            content: ''
            display: block
            width: inherit
            height: inherit
            background: url('/src/assets/images/bomb.svg') no-repeat
            background-size: contain
