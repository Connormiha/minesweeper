export type CellType = {|
    isOpened: boolean,
    isBomb: boolean,
    isDead: boolean,
    isMarked: boolean,
    isFlag: boolean,
    isUnknown: boolean,
    aroundBombCount: number,
    id: number,
|};

export type FieldType = CellType[][];

export type GameState = 'lost' | 'win' | 'in-progress' | 'not-started';

export type GameType = {|
    width: number,
    height: number,
    minesCount: number,
    state: GameState,
|};

export type FieldFillParams = {|
    width: number,
    height: number,
    minesCount: number,
|};
